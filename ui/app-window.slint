        y: parent.height/2.5 +(parent.height / 3) * sin(2 * 1rad* 3.14159 * i / 10) + (self.height / 3);    
        label_id: "Drone" + drone.id;
        // propagate the solved status from the model to the tile
        open_right_window => {
            // drone.image_visible = !drone.image_visible;
            
        }
    }

    in property <[Drone]> clients: [
        {id:10, crashed: false},
        {id:11, crashed: false},
    ];

    for client[i] in clients : Drone {
        width: 64px;
        height: 64px;
        x: parent.width/5;
        y: parent.height/3 +i*175px;  
        label_id: "Client" + client.id;
        background: red;
    //     // propagate the solved status from the model to the tile
    //     clicked => {
    //         // drone.image_visible = !drone.image_visible;
    //         clicked();
    //     }
        open_right_window => {
            // drone.image_visible = !drone.image_visible;
            open_right_window();
        }
    }

    in property <[Drone]> servers: [
        {id:12, crashed: false},
        {id:13, crashed: false},
    ];

    for server[i] in servers : Drone {
        width: 64px;
        height: 64px;
        x: parent.width/5 + 2*parent.height / 3 + 275px; 
        y: parent.height/3 +i*175px;  
        label_id: "Server" + server.id;
        background: green;
    //     // propagate the solved status from the model to the tile
    //     clicked => {
    //         // drone.image_visible = !drone.image_visible;
    //         clicked();
    //     }
        open_right_window => {
            // drone.image_visible = !drone.image_visible;
            open_right_window();
        }
    }
    

    LeftMenu {
        x: 0;
        y: parent.height/2;
        select_file => {
            // Trigger the callback to select a file (defined in Rust)
            select_file();
        }
    }

    RightMenu {
        x: parent.width - 300px;
        y: parent.height/2;
        crash => {
            // Trigger the callback to select a file (defined in Rust)
            crash();
        }
    }
}